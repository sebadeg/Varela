<% if usuario_signed_in? && current_usuario.cedula == 16 %>

	<%= p "Cantidad usuarios: " + Usuario.all.count.to_s %><br>
	<%= p "Cantidad cuentas: " + TitularCuenta.all.count.to_s %><br>
	<%= p "Cantidad autorizados: " + ActividadAlumno.where("opcion=1 OR opcion=2").count.to_s %><br>
	<%= p "Cantidad no autorizados: " + ActividadAlumno.where("opcion=0").count.to_s %><br><br>

	<%= form_for(@usuario, as: :usuario, url: principal_asociar_path(:usuario)) do |f| %>
        <div class="form-group">
            <%= f.label "Cedula", style: "font-size: 24px", class: "labelFormulario"  %>
            <%= f.text_field :cedula, autofocus: true, placeholder: "Cedula", style: "font-size: 24px"  %>
        </div>
        <div class="form-group">
            <%= f.label "Cuenta", style: "font-size: 24px", class: "labelFormulario"  %>
            <%= f.text_field :alumno1, autofocus: true, placeholder: "Cuenta", style: "font-size: 24px"  %>
        </div>
        <div class="form-group">
            <%= f.label "Titular", style: "font-size: 24px", class: "labelFormulario"  %>
            <%= f.text_field :alumno2, autofocus: true, placeholder: "Titular", style: "font-size: 24px"  %>
        </div>
        <div id="textoRegistrarse">
        	<%= f.submit "Asociar", style: "font-size: 24px"  %>
        </div>
    <% end %>

	<%= p "Van" %><br>
	<% @van.each do |a| %>
		<%= p a.nombre %><br>
	<% end %><br><br>

	<%= p "No van" %><br>
	<% @novan.each do |a| %>
		<%= p a.nombre %><br>
	<% end %><br><br>

	<%= p "No eligió" %><br>
	<% @noeligio.each do |a| %>
		<%= p a.nombre %><br>
	<% end %><br><br>

	<%= p "No registrados" %><br>
	<% @noregistrado.each do |a| %>
		<%= p a.nombre %><br>
	<% end %>


<% end %>

    


<div class="container">
	<div class="row">
  		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="panel-group">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
						<a data-toggle="collapse" href="#collapse1"><!--i class="far fa-credit-card"></i-->Alumnos</a>
						</h4>
					</div>

					<% @alumnos.each do |t| %>
						<div id="collapse1" class="panel-collapse collapse in">
							<div class="col-md-12 col-sm-12 col-xs-12 content-table">
								<!--CUADRO NOMBRE -->	
								<div class="panel-group sub-grupo">
				 					<div class="panel panel-default">
										<div class="panel-heading">
											<h4 class="panel-title">
											<a data-toggle="collapse" href="#collapseu1"><%= t.nombre %></a>
											</h4>
										</div>										
										<div id="collapseu1" class="panel-collapse collapse collapse in">
											<div class="col-md-12 col-sm-12 col-xs-12 content-table">
												
												<% @act = ActividadAlumno.where(['alumno_id = ? AND actividad_id = ?',t.id,3]).first rescue nil %>
												<% if (@act != nil) %>
												    <br>
												    <div id="textoRegistrarse">
												    	<p><%= p 'Actividad de campamento' %></p>
												    </div>
												    <% @cuenta = CuentaAlumno.where(['alumno_id = ?',t.id]).first rescue nil %>
												    <% @titular = TitularCuenta.where(['usuario_id = ? AND cuenta_id = ?',current_usuario.id,@cuenta.cuenta_id]).first rescue nil %>
												    <% if @titular != nil %>
														<%= form_for(@actividad, as: :actividad_alumno, url: principal_autorizar_path(:actividad)) do |f| %>

															<div id="textoRegistrarse">
														    <% if @act.opcion == 1 %>
														    	<b><%= p "Está autorizado el débito de $U 170" %></b>
														    <% else %>
														    	<%= f.label "No está autorizado" %>
														    <% end %>
															<br><br>
												            <%= f.hidden_field :alumno_id, value: t.id %>
												            <%= f.hidden_field :actividad_id, value: 3 %>
															<%= f.select :opcion, options_for_select([["No autorizo", 0], ["Autorizo a debitar  $U 170", 1]], @act.opcion)  %><br><br>
												            <%= f.submit "Confirmar"  %>
															</div>

														<% end %>													
														<br>
													<% end %>
												<% end %>
												


											</div>
										</div>
										<div class="clearfix"></div>
									</div>
								</div>
							</div>
						</div>
						<div class="clearfix"></div>
					<% end %>

				</div>
			</div>
		</div>
	</div>
</div>




