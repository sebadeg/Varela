<%= form_for(@evento_usuario, as: :evento_usuario, url: principal_eventos_registrar_path(:evento)) do |f| %>

<div class="container">
	<div class="row">
  		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="panel panel-default devise-bs">
				<div class="panel-heading">
					<h2>
						<%= p "Formulario de inscripción" %>
					</h2>
				</div>
				<div class="panel-body">

	<div class="form-group">
    	<%= f.label "Nombres", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :nombres, autofocus: true, placeholder: "Nombres", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Apellidos", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :apellidos, autofocus: true, placeholder: "Apellidos", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Teléfono", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :telefono, autofocus: true, placeholder: "Teléfono", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Celular", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :celular, autofocus: true, placeholder: "Celular", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Dirección", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :direccion, autofocus: true, placeholder: "Dirección", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Fecha de nacimiento", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.date_field :nacimiento, autofocus: true, placeholder: "Fecha de Nacimiento", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Nacionalidad", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :nacionalidad, autofocus: true, placeholder: "Nacionalidad", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Mail", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.email_field :email, autofocus: true, placeholder: "Mail", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Horarios", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :horarios, autofocus: true, placeholder: "Horarios", style: "font-size: 24px"  %>
    </div>

				</div>
			</div>
			<div class="clearfix"></div>			
		</div>
	</div>
</div>


<div class="container">
	<div class="row">
  		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="panel panel-default devise-bs">
				<div class="panel-heading">
					<h2>
						<%= p "Datos personales" %>
					</h2>
				</div>
				<div class="panel-body">

	<div class="form-group">
    	<%= f.label "Estudios universitarios completos", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.check_box :universidad_completa, autofocus: true, style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Estudios universitarios incompletos o en curso", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.check_box :universidad_incompleta, autofocus: true, style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Actualmente se encuentra trabajando? Indique cargo y rubro", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :trabajo, autofocus: true, placeholder: "Trabajo, cargo y rubro", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Ultimo trabajo y cargo", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :ultimo_trabajo, autofocus: true, placeholder: "Ultimo trabajo y cargo", style: "font-size: 24px"  %>
    </div>
	<div class="form-group">
    	<%= f.label "Comentarios", style: "font-size: 24px", class: "labelFormulario"  %>
		<%= f.text_field :comentarios, autofocus: true, placeholder: "Comentarios", style: "font-size: 24px"  %>
    </div>
	<div id="textoRegistrarse">
		<%= f.submit "Registrarse", style: "font-size: 24px" %>
	</div>

				</div>
			</div>
			<div class="clearfix"></div>			
		</div>
	</div>
</div>




<% end %>

